// .eslintrc

{
  "env": {
    "browser": true
  },
  "extends": ["plugin:prettier/recommended", "eslint:recommended", "airbnb-base/legacy"],
  "plugins": ["prettier"],
  "settings": {
    "import/resolver": {
      "javascript": {}
    }
  },
  "rules": {
    "prettier/prettier": 2,
    "import/order": [
      2,
      {
        "groups": ["external", "builtin", "index", "sibling", "parent", "internal", "type"],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "newlines-between": "always-and-inside-groups"
      }
    ]
  }
}
